<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.medin.myapplication.Game_selection"
    android:background="@mipmap/twokids">

    <Button
        android:text="CARTOONS"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80sp"
        android:id="@+id/buttonCartoons"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_width="450sp"
        android:layout_height="100sp"
        android:backgroundTint="#ff6666"
        />

    <Button
        android:text="ANIMALS"
        android:layout_below="@+id/buttonCartoons"
        android:id="@+id/buttonAnimals"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_width="450sp"
        android:layout_height="100sp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#ff6666"
        android:layout_marginTop="20sp"/>

    <TextView
        android:text="CARD MOTIVES"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textMessage"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginTop="20sp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
